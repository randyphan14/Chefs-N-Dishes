@using ChefsNDishes.Models;
@model Dish

<h1>Add a new Dish!</h1>
<a href="/">Home</a>
<form asp-action="CreateDish" asp-controller="Home" method="POST">

    <label asp-for="Name">Name of Dish</label>
    <span asp-validation-for="Name"></span>
    <input type="text"asp-for="Name">


    <label asp-for="Calories"># of Calories</label>
    <span asp-validation-for="Calories"></span>
    <input type="text"asp-for="Calories">

    <label asp-for="Description">Description</label>
    <span asp-validation-for="Description"></span>
    <textarea asp-for="Description"></textarea>

    <label asp-for="ChefId">Chef</label>
    <select class="form-control" asp-for="ChefId">
        @foreach(Chef user in @ViewBag.Chefs)
        {
            <option value="@user.ChefId">@user.FirstName @user.LastName</option>
        }
    <span asp-validation-for="ChefId"></span>
    </select>


    <label asp-for="Tastiness">Tastiness</label>
    <span asp-validation-for="Tastiness"></span>
    <select asp-for="Tastiness">
        <option value=1>1</option>
        <option value=2>2</option>
        <option value=3>3</option>
        <option value=4>4</option>
        <option value=5>5</option>
    </select>

    <button type="submit">Submit</button>
</form>